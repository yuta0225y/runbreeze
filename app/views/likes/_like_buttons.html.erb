<turbo-frame id="like_buttons_<%= post.id %>">
  <% if current_user %>
    <div class="flex items-center space-x-1">
      <% if current_user && post.liked_by?(current_user) %>
        <!-- いいね解除ボタン -->
        <%= render 'likes/unlike', post: post, like: current_user.likes.find_by(post: post) %>
      <% else %>
        <!-- いいね追加ボタン -->
        <%= render 'likes/like', post: post %>
      <% end %>
      <!-- いいね数の表示 -->
      <span class="text-sm text-gray-700"><%= post.likes.count %></span>
    </div>
  <% end %>
</turbo-frame>