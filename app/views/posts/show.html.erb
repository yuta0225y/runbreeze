<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-4">
    <% if @post.user.profile_image.present? %>
      <%= image_tag @post.user.profile_image.url, alt: @post.user.username, class: "w-10 h-10 rounded-full mr-2" %>
    <% else %>
      <%= image_tag "default_profile_image.svg", alt: @post.user.username, class: "w-10 h-10 rounded-full mr-2" %>
    <% end %>
    <div>
      <p class="text-sm font-semibold"><%= @post.user.username %></p>
      <p class="text-xs text-gray-500"><%= @post.created_at.strftime("%Y年%m月%d日") %></p>
    </div>
  </div>

  <div class="relative mb-4 flex justify-center">
    <% if @post.post_image.present? %>
      <%= image_tag @post.post_image.url, alt: @post.title, class: "max-w-lg max-h-96 w-full h-auto object-cover rounded-lg shadow-lg" %>
    <% else %>
      <%= image_tag 'default_post_image.jpg', alt: "No Image", class: "max-w-lg max-h-96 w-full h-auto object-cover rounded-lg shadow-lg" %>
    <% end %>

    <% if @post.category.present? %>
      <div class="absolute top-2 left-2 bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded-full shadow-lg">
        <%= @post.category.name %>
      </div>
    <% end %>
  </div>
  
  <div class="flex items-center justify-between mb-4">
    <div class="flex space-x-4">
      <button class="flex items-center space-x-1">
        <%= image_tag 'like.svg', alt: "Like", class: "h-5 w-5" %>
      </button>
      <button class="flex items-center space-x-1">
        <%= image_tag 'comment.svg', alt: "Comment", class: "h-5 w-5" %>
        <span class="text-sm"><%= @comments.size %></span>
      </button>
    </div>
  
    <button class="flex items-center space-x-1">
      <%= image_tag 'bookmark.svg', alt: "Bookmark", class: "h-5 w-5" %>
    </button>
  </div>  
  
  <h2 class="text-2xl font-bold mb-2"><%= @post.title %></h2>
  <div class="flex flex-wrap gap-2 mb-4">
    <% @post.tags.each do |tag| %>
      <span class="bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded-full shadow-sm">#<%= tag.name %></span>
    <% end %>
  </div>
  
  <p class="text-sm text-gray-700 mb-6"><%= simple_format(@post.content) %></p>

  <hr class="border-t border-gray-300 mb-6">

  <h3 class="text-md font-semibold mb-2">コメント</h3>
  <div class="space-y-2 mb-4 text-sm text-gray-700">
    <% @comments.each do |comment| %>
      <div class="flex items-center mb-2">
        <% if comment.user.profile_image.present? %>
          <%= image_tag comment.user.profile_image.url, alt: comment.user.username, class: "w-6 h-6 rounded-full mr-2" %>
        <% else %>
          <%= image_tag "default_profile_image.svg", alt: comment.user.username, class: "w-6 h-6 rounded-full mr-2" %>
        <% end %>
        <div>
          <span class="font-semibold"><%= comment.user.username %>:</span>
          <span><%= comment.content %></span>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="flex items-center bg-gray-100 rounded-full p-1 shadow-sm">
    <%= form_with model: [@post, Comment.new], local: true, class: "flex-grow" do |f| %>
      <div class="flex items-center w-full">
        <%= f.text_field :content, placeholder: "コメントを追加...", class: "w-full bg-transparent text-sm border-none focus:outline-none px-3 py-1" %>
        
        <button type="submit" class="ml-1 bg-blue-500 hover:bg-blue-600 text-white rounded-full p-1 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M12 4a1 1 0 01.707.293l7 7a1 1 0 01-1.414 1.414L13 7.414V20a1 1 0 11-2 0V7.414L5.707 12.707a1 1 0 01-1.414-1.414l7-7A1 1 0 0112 4z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>  
</div>
