<!-- app/views/posts/_form.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8"><%= form_title %></h1>

  <%= form_with model: @post, local: true, class: "space-y-6", html: { multipart: true } do |form| %>

    <!-- タイトル -->
    <div class="form-control">
      <%= form.text_field :title, placeholder: "タイトルを入力してください", class: "input input-bordered w-full", value: @post.title %>
    </div>

    <!-- カテゴリー選択 -->
    <div class="form-control">
      <label class="label">カテゴリーを選択してください</label>
      <div class="carousel carousel-center space-x-4 overflow-x-auto" id="category-container">
        <% Category.all.each do |category| %>
          <div class="carousel-item">
            <span
              class="category-button badge badge-neutral cursor-pointer select-none"
              data-category-id="<%= category.id %>">
              <%= category.name %>
            </span>
          </div>
        <% end %>
      </div>
      <!-- 選択されたカテゴリーの hidden field -->
      <%= form.hidden_field :category_id, id: "selected-category-id", value: @post.category_id %>
    </div>

    <!-- タグ選択 -->
    <div class="form-control mt-4">
      <label class="label">タグ（3つまで選択できます）</label>

      <!-- 標準タグカルーセル -->
      <div class="carousel carousel-center space-x-4 overflow-x-auto" id="standard-tags-container">
        <% Tag.where(tag_type: :standard).each do |tag| %>
          <span
            class="tag-button carousel-item badge badge-neutral cursor-pointer select-none"
            data-tag-id="<%= tag.id %>"
            data-tag-type="<%= tag.tag_type %>"
            aria-pressed="<%= @post.tags.include?(tag) ? 'true' : 'false' %>">
            #<%= tag.name %>
          </span>
        <% end %>
      </div>

      <!-- カテゴリー専用タグカルーセル -->
      <div class="carousel carousel-center space-x-4 overflow-x-auto mt-4" id="category-tags-container">
        <!-- カテゴリー選択時に JavaScript で動的に追加 -->
      </div>
    </div>

    <!-- 選択されたタグの隠しフィールド -->
    <div id="selected-tags-container">
      <% @post.tags.where(tag_type: [:standard, :category_specific]).each do |tag| %>
        <%= hidden_field_tag "post[tag_ids][]", tag.id %>
      <% end %>
    </div>

    <!-- フィードバックメッセージ -->
    <div id="tag-selection-feedback" class="text-red-500 mt-2 hidden"></div>

    <!-- 選択数の表示 -->
    <div class="text-sm mt-1">選択済み: <span id="selected-tags-count"><%= @post.tags.size %></span>/3</div>

    <!-- 投稿内容 -->
    <div class="form-control">
      <%= form.text_area :content, placeholder: "本文を入力してください", class: "textarea textarea-bordered w-full h-40", value: @post.content %>
    </div>

    <!-- 画像アップロード -->
    <div class="form-control">
      <%= form.label :post_image, "投稿画像", class: "label" %>
      <% if @post.post_image.present? %>
        <div class="mb-2">
          <%= image_tag @post.post_image.url, alt: @post.title, class: "max-w-md h-auto object-cover rounded-lg" %>
        </div>
      <% end %>
      <%= form.file_field :post_image, class: "file-input file-input-bordered w-full" %>
    </div>

    <!-- 参考URL -->
    <div class="form-control">
      <%= form.label :reference_url, "関連URL (オプション)", class: "label" %>
      <%= form.url_field :reference_url, placeholder: "http://example.com", class: "input input-bordered w-full", value: @post.reference_url %>
    </div>

    <!-- 送信ボタン -->
    <div class="flex justify-end space-x-2 mt-4">
      <%= link_to "キャンセル", cancel_path, class: "px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-100" %>
      <%= form.submit submit_button_text, class: "px-4 py-2 text-sm text-white bg-blue-600 rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
