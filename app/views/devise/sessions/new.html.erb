<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- ログインタイトル -->
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        ログイン
      </h2>
    </div>

    <!-- エラーメッセージの表示 -->
    <%= render "shared/error_messages", resource: resource %>

    <!-- ログインフォーム -->
    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <!-- メールアドレス入力 -->
        <div class="form-control mb-4">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "例: taro@example.com" %>
        </div>

        <!-- パスワード入力 -->
        <div class="form-control mb-6">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "4文字以上のパスワードを入力してください" %>
        </div>
      </div>

      <!-- パスワード忘れリンク -->
      <div class="form-control flex justify-end mb-6">
        <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-sm link link-primary" %>
      </div>

      <!-- ログインボタン -->
      <div class="form-control">
        <%= f.submit "ログイン", class: "btn btn-primary w-full transition ease-in-out duration-150 hover:bg-blue-600" %>
      </div>
    <% end %>

    <!-- 新規登録リンク -->
    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">まだアカウントをお持ちでない方は</p>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "link link-primary mt-2 inline-block" %>
    </div>

    <!-- 区切り線 -->
    <hr class="my-6 border-gray-300">

    <!-- またはのテキスト -->
    <p class="text-center text-sm text-gray-600">または</p>

    <!-- Googleログインボタン -->
    <div class="oauth-buttons mt-4 flex justify-center">
      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-primary w-full flex items-center justify-center" do %>
        <span class="text-gray-100 font-semibold">Googleでログイン</span>
      <% end %> 
    </div>
  </div>
</div>
