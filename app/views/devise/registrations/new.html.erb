<!-- app/views/devise/registrations/new.html.erb -->

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- 新規登録タイトル -->
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        新規登録
      </h2>
    </div>

    <!-- エラーメッセージの表示 -->
    <%= devise_error_messages! %>

    <!-- 新規登録フォーム -->
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <!-- ユーザー名入力 -->
        <div class="form-control mb-4">
          <%= f.label :username, "ユーザー名", class: "label" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "例: taro" %>
        </div>

        <!-- メールアドレス入力 -->
        <div class="form-control mb-4">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "例: taro@example.com" %>
        </div>

        <!-- パスワード入力 -->
        <div class="form-control mb-4">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "4文字以上のパスワードを入力してください" %>
        </div>

        <!-- パスワード確認入力 -->
        <div class="form-control mb-6">
          <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full bg-gray-100 focus:bg-white", placeholder: "新しいパスワードをもう一度入力してください" %>
        </div>
      </div>

      <!-- 新規登録ボタン -->
      <div class="form-control">
        <%= f.submit "新規登録", class: "btn btn-primary w-full transition ease-in-out duration-150 hover:bg-blue-600" %>
      </div>
    <% end %>

    <!-- ログインへのリンク -->
    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">既にアカウントをお持ちの方は</p>
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "link link-primary mt-2 inline-block" %>
    </div>

    <!-- 区切り線 -->
    <hr class="my-6 border-gray-300">

    <!-- またはのテキスト -->
    <p class="text-center text-sm text-gray-600">または</p>

    <!-- Googleアカウントで新規登録ボタン -->
    <div class="oauth-buttons mt-4 flex justify-center">
    <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-primary w-full flex items-center justify-center" do %>
      <span class="text-gray-100 font-semibold">Googleでログイン</span>
    <% end %> 
    </div>
  </div>
</div>
