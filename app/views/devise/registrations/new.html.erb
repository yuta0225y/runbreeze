<!-- app/views/devise/registrations/new.html.erb -->

<h2 class="text-3xl font-bold text-center mb-6">サインアップ</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <!-- エラーメッセージの表示 -->
  <% if resource.errors.any? %>
    <div class="alert alert-error mb-4">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ユーザー名フィールド -->
  <div class="form-control mb-4">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input input-bordered w-full bg-gray-100 focus:bg-white" %>
  </div>

  <!-- メールアドレスフィールド -->
  <div class="form-control mb-4">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full bg-gray-100 focus:bg-white" %>
  </div>

  <!-- パスワードフィールド -->
  <div class="form-control mb-4">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full bg-gray-100 focus:bg-white" %>
  </div>

  <!-- パスワード確認フィールド -->
  <div class="form-control mb-6">
    <%= f.label :password_confirmation, class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full bg-gray-100 focus:bg-white" %>
  </div>

  <!-- サインアップボタン -->
  <div class="form-control">
    <%= f.submit "サインアップ", class: "btn btn-primary w-full" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "link link-primary" %>
</div>
